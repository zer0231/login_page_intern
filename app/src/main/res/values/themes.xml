<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_d</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cardView">
        <item name="android:backgroundTint">@color/grey</item>
    </style>

    <style name="custom">
        <item name="android:buttonTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_box_theme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">#100B0B</item>
        <item name="boxStrokeColor">@color/red</item>
        <item name="android:tint">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="radio_and_check_btn_theme">
        <item name="android:buttonTint">@color/red</item>
    </style>

    <style name="button_theme">
        <item name="android:textColor">@color/snow_storm_1</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="header_text_view_theme">
        <item name="android:textColor">#181D31</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image_button_theme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="terms_and_condition_theme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorLink">@color/red</item>
    </style>

    <style name="avatar_theme">
        <item name="android:tint">@color/red</item>
    </style>
</resources>